<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.letseat">

    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permisson.READ_GSERVICES" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/letseatlogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/letseatlogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Boundary.AnimationUI">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Boundary.RestaurantListUI" />
        <activity android:name=".Boundary.FavouritesUI" />
        <activity android:name=".Boundary.ProfileUI" />
        <activity
            android:name=".Boundary.NavigationDrawerUI"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Boundary.RestaurantsDetailsUI"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Boundary.RegisterUI" />
        <activity android:name=".Boundary.LoginUI" />
        <activity android:name=".Boundary.MainActivity"/>

    </application>

</manifest>